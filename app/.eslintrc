{
  "extends": "airbnb",
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "import/no-extraneous-dependencies": [error, { devDependencies: true }],
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "react/jsx-indent": [
      2,
      4
    ],
    "react/prefer-stateless-function": [
      0,
      "ignorePureComponents": true
    ],
    "react/require-default-props": 0,
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to" ]
    }]
  }
}
